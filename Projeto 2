/* Estilo base (Mobile First) */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  line-height: 1.6;
}

header {
  background: #333;
  color: #fff;
  padding: 1rem;
  text-align: center;
}

nav ul {
  list-style: none;
  padding: 0;
}

nav ul li {
  display: inline;
  margin: 0 10px;
}

main {
  padding: 1rem;
}

footer {
  background: #333;
  color: #fff;
  text-align: center;
  padding: 1rem;
}

/* Tablet (769px a 1024px) */
@media (min-width: 769px) {
  header {
    text-align: left;
    padding: 2rem;
  }

  nav ul li {
    margin: 0 15px;
  }
}

/* Desktop (acima de 1024px) */
@media (min-width: 1024px) {
  main {
    max-width: 1200px;
    margin: 0 auto;
  }

  header, footer {
    padding: 3rem;
  }
}
